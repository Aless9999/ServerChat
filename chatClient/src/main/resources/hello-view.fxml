<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.macnonline.serverChat.ClientController">
    <TextArea fx:id="mainArea" editable="false" VBox.vgrow="ALWAYS"/>



    <HBox>
        <TextField fx:id="message" HBox.hgrow="ALWAYS" promptText="Enter your message."/>
        <Button text="Send message." onAction="#sendMsgMessage"/>
    </HBox>
</VBox>
